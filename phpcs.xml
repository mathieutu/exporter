<?xml version="1.0"?>
<ruleset name="Custom Standard">
    <description>MathieuTu CodeStyle standard</description>

    <file>./src</file>
    <file>./tests</file>

    <arg name="report" value="full"/>
    <arg name="report" value="summary"/>
    <arg value="sp"/>
    <!--<arg value="q"/>-->

    <rule ref="PSR2">
        <exclude name="Generic.Formatting.DisallowMultipleStatements.SameLine"/>
        <exclude name="PSR2.Methods.FunctionCallSignature.MultipleArguments"/>
        <exclude name="PSR2.ControlStructures.ElseIfDeclaration.NotAllowed"/>
    </rule>

    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <severity>100</severity>
        <properties>
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>

    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace.StartFile">
        <severity>100</severity>
    </rule>

    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace.EndFile">
        <severity>100</severity>
    </rule>

    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace.EmptyLines">
        <severity>100</severity>
    </rule>

    <rule ref="Squiz.WhiteSpace.ControlStructureSpacing.SpaceBeforeCloseBrace">
        <severity>100</severity>
    </rule>

    <rule ref="Squiz.WhiteSpace.ControlStructureSpacing.NoLineAfterClose">
        <severity>100</severity>
    </rule>

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="150"/> <!-- warning -->
            <property name="absoluteLineLimit" value="200"/> <!-- error -->
        </properties>
    </rule>
</ruleset>
